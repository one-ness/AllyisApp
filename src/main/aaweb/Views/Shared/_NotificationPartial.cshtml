<div class="container" id="alerts">
    @if(ViewBag.Alerts != null)
    {

        foreach (var a in ViewBag.Alerts)
        {
        <div class="alert @a.Type.Classes col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">@a.Text</div>
        }
   }
</div>
