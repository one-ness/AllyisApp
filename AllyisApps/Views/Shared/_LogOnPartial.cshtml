@model AllyisApps.ViewModels.Shared.LogOnPartialViewModel

@if (User.Identity.IsAuthenticated)
{
	<li>
		<a href="@Url.Action(ActionConstants.Index, ControllerConstants.Account)">@Model.UserName</a>
	</li>
	<li>
		<a href="@Url.Action(ActionConstants.LogOff, ControllerConstants.Account)" title="@Strings.SignOut" onclick="@ViewExtensions.ConfirmDialog(Strings.LogOffPrompt)">
			@Strings.SignOut &nbsp;<i class="fa fa-sign-out"></i>
		</a>
	</li>
}
else
{
	<li>
		<a href="@Url.Action(ActionConstants.Register, ControllerConstants.Account, new { returnUrl = ViewBag.ReturnUrl })" id="registerLink">
			@Strings.Register <i class="fa fa-user-plus"></i>
		</a>
	</li>
	<li>
		<a href="@Url.Action(ActionConstants.LogOn, ControllerConstants.Account, new { returnUrl = ViewBag.ReturnUrl })" id="loginLink">
			@Strings.SignIn <i class="fa fa-sign-in"></i>
		</a>
	</li>
}