@model AllyisApps.ViewModels.Shared.LogOnPartialViewModel

@if (User.Identity.IsAuthenticated)
{
	<li>
		<span class="headerOrgName">@Model.CurrentOrganizationName</span>
	</li>
	<li>
		@{
			@Html.ActionLink(Model.UserName, ActionConstants.Index, ControllerConstants.Account)
		}
	</li>
	<li>
		<a href="@Url.Action(ActionConstants.LogOff, ControllerConstants.Account)" title="@Strings.SignOut" class="btn btn-default navbar-btn col-xs-push-2 col-xs-8 col-sm-12" onclick="@ViewExtensions.ConfirmDialog(Strings.LogOffPrompt)" style ="padding: 6px 10px;">
			<i class="fa fa-sign-out"></i>
		</a>
	</li>
}
else
{
	<li href="@Url.Action(ActionConstants.Register, ControllerConstants.Account, new { ReturnUrl = ViewBag.ReturnUrl }),  new { id = "registerLink" }">@Strings.Register</li>
    <li href="@Url.Action(ActionConstants.LogOn, ControllerConstants.Account, new { ReturnUrl = ViewBag.ReturnUrl }),  new { id = "loginLink" }">@Strings.SignIn</li>
}
