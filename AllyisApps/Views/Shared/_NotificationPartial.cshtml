<div id="alerts">
    @if(ViewBag.Alerts != null)
    {

        foreach (AllyisApps.Core.Alert.BootstrapAlert a in ViewBag.Alerts)
        {
            <div class="row">
                <div class="alert @a.Type.Classes ovrd-col-xs-10 col-xs-10 ovrd-col-xs-offset-1 col-xs-offset-1 ovrd-col-sm-10 col-sm-10 col ovrd-col-md-offset-1 col-md-offset-1">
                    @if(a.IsHtmlString)
                    {
                        @(new HtmlString(a.Text))
                    }
                    else
                    {
                        @a.Text
                    }
                </div>
            </div>
        }
   }
</div>
@*Non-container div to prevent misstyling of alerts from permissions.*@
<div id="permissions-alerts">
</div>