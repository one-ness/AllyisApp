@model System.DateTime

@{
    string date = DateTime.Today.ToShortDateString();
    if (Model != null)
    {
        date = string.Format("{0}-{1}-{2}", Model.Year, Model.Month, Model.Day);
    }

    @Html.TextBox(string.Empty, date, new { @class = "ovrd-form-control form-control", type = "date" })
}