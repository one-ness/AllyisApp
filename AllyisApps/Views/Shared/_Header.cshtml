@using AllyisApps.Core;
@{
	//Prevent the browser from caching any private page
	Response.Cache.SetExpires(DateTime.UtcNow.AddMinutes(-1));
	Response.Cache.SetCacheability(HttpCacheability.NoCache);
	Response.Cache.SetNoStore();
}
<nav class="navbar navbar-default">
	@*<div class="container-fluid">*@
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				<span class="sr-only">@Strings.ToggleNavigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<span class="navbar-brand">
				<a href=@Url.Action(ActionConstants.RouteHome, ControllerConstants.Account, new RouteValueDictionary(new { area = "" }))>
					<img src="~/Content/icons/allyislogo.png" style="height: 32px; float: left; margin-top: -8px; margin-right: 8px;" title="" alt="apps">
					@Strings.Apps
				</a>
			</span>
		</div>

		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<div class="navbar-right">
				<ul class="nav navbar-nav">
					@if (DisplayHints.BreadcrumbNavPartialLocation != null)
						{
							Html.RenderPartial(DisplayHints.BreadcrumbNavPartialLocation);
						}
					@Html.Action(ActionConstants.LogOnPartial, ControllerConstants.Shared, new { returnUrl = ViewBag.ReturnUrl, area = "" })
				</ul>
			</div>
		</div>
	@*</div>*@
</nav>
