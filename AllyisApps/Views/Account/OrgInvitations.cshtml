@model OrganizationInvitationsViewModel
@{
	var sb = new System.Text.StringBuilder();
	sb.Append(Strings.Members);
	sb.Append(": ");
	sb.Append(Model.OrganizationName);
	ViewBag.TitleBar = sb.ToString();

	sb.Clear();
	sb.Append("Invitations count");
	sb.Append(": ");
	string title = sb.ToString();
}

@Html.Partial("_MembersAndInvitationsTab", Model.TabInfo)

<div class="row" style="margin-bottom:10px; margin-top:10px;">
	<div class="col-xs-12">
		<h1 style="margin-top:0px; margin-bottom:0px; display:inline;">@ViewBag.TitleBar</h1>
		<span class="pull-right">
			@if (Model.CanManagePermissions)
			{
				<a href="@Url.Action(ActionConstants.ManageOrgPermissions, ControllerConstants.Account, new { id = Model.OrganizationId })" class="btn btn-default" title="@Strings.ManagePermissions">@Strings.ManagePermissions <i class="fa fa-fw fa-lock"></i></a><span>&nbsp;&nbsp;</span>
			}
			@if (Model.CanAddUser)
			{
				<a href="@Url.Action(ActionConstants.AddMember, ControllerConstants.Account, new { id = Model.OrganizationId })" class="btn btn-default" title="@Strings.AddMembers">@Strings.AddMembers <i class="fa fa-fw fa-user-plus"></i></a>
			}
		</span>
	</div>
</div>