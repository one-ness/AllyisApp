@model AllyisApps.ViewModels.Auth.ResetPasswordViewModel
@{
	ViewBag.Title = Strings.ResetPassword;
}

<div class="shrink-wrap-center">
	<div class="min300">
		@using (Html.BeginForm(ActionConstants.ResetPassword, ControllerConstants.Account, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
			@Html.HiddenFor(m => m.Code)
			@Html.HiddenFor(m => m.UserId)
			<div class="form-group">
				@Html.ReqLabelFor(m => m.Password)
				@Html.PasswordFor(m => m.Password, new { @class = "form-control", @onkeypress = "capsCheck(event)", @onkeydown = "capsCheck(event)", @CssClass = "alert" })
				@Html.ValidationMessageFor(m => m.Password)
			</div>
			<div class="form-group">
				@Html.ReqLabelFor(m => m.ConfirmPassword)
				@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @onkeypress = "capsCheck(event)", @onkeydown = "capsCheck(event)" })
				@Html.ValidationMessageFor(m => m.ConfirmPassword)
			</div>
			<div class="form-group allyis-action-buttons">
				<input type="submit" class="btn btn-primary" value=@Strings.Reset />
			</div>
		}
	</div>
</div>
