@model AllyisApps.ViewModels.Auth.EditProfileViewModel
@{
	ViewBag.Title = Model.FirstName + " " + Model.LastName;
}

<div class="shrink-wrap-center">
	<div class="min300">
		@using (Html.BeginForm(ActionConstants.EditProfile, ControllerConstants.Account, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
			<div class="row">
				<div class="col-md-6 min300">
					<div class="form-group">
						@Html.LabelFor(m => m.Email, Strings.Email)
						<div class="text-box-padded">@Html.DisplayTextFor(m => m.Email)</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.FirstName, Strings.FirstName)
						<div class="text-box-padded">@Html.DisplayTextFor(m => m.FirstName)</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.LastName, Strings.LastName)
						<div class="text-box-padded">@Html.DisplayTextFor(m => m.LastName)</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.DateOfBirth, Strings.DateOfBirth)
						<div class="text-box-padded">
							@if (Html.ViewData.Model.DateOfBirth.HasValue)
							{@Html.ViewData.Model.DateOfBirth.Value.ToShortDateString()}
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.PhoneNumber, Strings.PhoneNumber)
						<div class="text-box-padded">@Html.DisplayTextFor(m => m.PhoneNumber)</div>
					</div>
				</div>
				<div class="col-md-6 min300">
					<div class="form-group">
						@Html.LabelFor(m => m.Address, Strings.Address)
						<div class="text-box-padded">@Html.DisplayTextFor(m => m.Address)</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Country, Strings.Country)
						<div class="text-box-padded">@Html.DisplayTextFor(m => m.Country)</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.State, Strings.State)
						<div class="text-box-padded">@Html.DisplayTextFor(m => m.State)</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.City, Strings.City)
						<div class="text-box-padded">@Html.DisplayTextFor(m => m.City)</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.PostalCode, Strings.PostalCode)
						<div class="text-box-padded">@Html.DisplayTextFor(m => m.PostalCode)</div>
					</div>
				</div>
			</div>

			<div class="form-group allyis-action-buttons">
				<a href="javascript:history.back()" class="btn btn-default">@Strings.Back</a>
			</div>
		}
	</div>
</div>
