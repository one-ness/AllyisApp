@model OrganizationMembersViewModel2
@{
	var sb = new System.Text.StringBuilder();
	sb.Append(Strings.Members);
	sb.Append(": ");
	sb.Append(Model.OrganizationName);
	ViewBag.TitleBar = sb.ToString();

	sb.Clear();
	sb.Append("Member count");
	sb.Append(": ");
	sb.Append(Model.Users.Count);
	string title = sb.ToString();
}

@Html.Partial("_MembersAndInvitationsTab", Model.TabInfo)

<div class="row" style="margin-bottom:10px; margin-top:10px;">
	<div class="col-xs-12">
		<h1 style="margin-top:0px; margin-bottom:0px; display:inline;">@ViewBag.TitleBar</h1>
		<span class="pull-right">
			@if (Model.CanManagePermissions)
			{
				<a href="@Url.Action(ActionConstants.ManageOrgPermissions, ControllerConstants.Account, new { id = Model.OrganizationId })" class="btn btn-default" title="@Strings.ManagePermissions">@Strings.ManagePermissions <i class="fa fa-fw fa-lock"></i></a><span>&nbsp;&nbsp;</span>
			}
			@if (Model.CanAddUser)
			{
				<a href="@Url.Action(ActionConstants.AddMember, ControllerConstants.Account, new { id = Model.OrganizationId })" class="btn btn-default" title="@Strings.AddMembers">@Strings.AddMembers <i class="fa fa-fw fa-user-plus"></i></a>
			}
		</span>
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 style="margin-top:0px; margin-bottom:0px;">@title</h4>
			</div>
			<div class="panel-body">
				<table class="table table-striped table-condensed">
					<thead>
						<tr>
							<th>Name</th>
							<th>Email</th>
							<th>Employee ID</th>
							<th>Joined Date</th>
							<th>Role</th>
							<th><i class="fa fa-edit"> Edit</i></th>
						</tr>
					</thead>
					@foreach (var item in Model.Users)
					{
						<tr>
							<td class="col-md-2">@item.Username</td>
							<td class="col-md-3">@item.Email</td>
							<td class="col-md-2">@item.EmployeeId</td>
							<td class="col-md-2">@item.FormattedJoinedDate</td>
							<td class="col-md-2">@item.RoleName</td>
							<td class="col-md-1">
								@if (Model.CanEditUser)
								{
									<a href="@Url.Action(ActionConstants.EditMember, ControllerConstants.Account, new { @id = item.UserId })" title="@Strings.EditUser"><i class="fa fa-fw fa-edit"></i></a>
								}
							</td>
						</tr>
					}
				</table>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<a href="@Url.Action(ActionConstants.Index, ControllerConstants.Account)"
				   class="btn btn-default pull-left" title="@Strings.Back"><i class="fa fa-caret-left"></i> @Strings.Back</a>
			</div>
		</div>
	</div>
</div>

