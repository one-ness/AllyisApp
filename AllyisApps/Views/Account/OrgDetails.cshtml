@model OrganizationDetailsViewModel

@{
	var sb = new System.Text.StringBuilder();
	sb.Append(Strings.OrganizationDetails);
	sb.Append(": ");
	sb.Append(Model.OrganizationName);
	ViewBag.TitleBar = sb.ToString();
}

<div class="row">
	<div class="col-xs-12">
		<table id="org-details" class="table table-striped table-condensed">
			<tr>
				<td class="detail-label"><label>@Strings.Name</label></td>
				<td class="detail-content">@Html.DisplayFor(m => m.OrganizationName)</td>
			</tr>
			<tr>
				<td class="detail-label"><label>@Strings.SiteURL</label></td>
				<td class="detail-content">@Html.DisplayFor(m => m.SiteURL)</td>
			</tr>
			<tr>
				<td class="detail-label"><label>@Strings.Address</label></td>
				<td class="detail-content">@Html.DisplayFor(m => m.Address)</td>
			</tr>
			<tr>
				<td class="detail-label"><label>@Strings.Country</label></td>
				<td class="detail-content">@Html.DisplayFor(m => m.CountryName)</td>
			</tr>
			<tr>
				<td class="detail-label"><label>@Strings.State</label></td>
				<td class="detail-content">@Html.DisplayFor(m => m.StateName)</td>
			</tr>
			<tr>
				<td class="detail-label"><label>@Strings.City</label></td>
				<td class="detail-content">@Html.DisplayFor(m => m.City)</td>
			</tr>
			<tr>
				<td class="detail-label"><label>@Strings.PostalCode</label></td>
				<td class="detail-content">@Html.DisplayFor(m => m.PostalCode)</td>
			</tr>
			<tr>
				<td class="detail-label"><label>@Strings.PhoneNumber</label></td>
				<td class="detail-content">@Html.DisplayFor(m => m.PhoneNumber)</td>
			</tr>
			<tr>
				<td class="detail-label"><label>@Strings.FaxNumber</label></td>
				<td class="detail-content">@Html.DisplayFor(m => m.FaxNumber)</td>
			</tr>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<a href="@Url.Action(ActionConstants.Index, ControllerConstants.Account)"
		   class="btn btn-default pull-left" title="@Strings.Back"><i class="fa fa-caret-left"></i>&nbsp;@Strings.Back</a>
		@if (Model.CanEditOrganization)
		{
			<a href="@Url.Action(ActionConstants.EditOrg, ControllerConstants.Account, new { id = Model.OrganizationId })"
			   class="btn btn-default pull-left" style="margin-left: 10px;" title="@Strings.EditOrganization">@Strings.Edit&nbsp;<i class="fa fa-edit"></i></a>
		}
		@if (Model.CanDeleteOrganization)
		{
			using (Html.BeginForm(ActionConstants.DeleteOrg, ControllerConstants.Account, new { id = Model.OrganizationId }, FormMethod.Post, new { @onsubmit = String.Format("return confirm(\"{0}\")", Html.Raw(Strings.ConfirmDeleteOrg)) }))
			{
				@Html.AntiForgeryToken()
				<button type="submit" value="@Strings.DeleteOrganization" class="btn btn-danger pull-right" id="submitDelete">@Strings.DeleteOrganization</button>
			}
		}
	</div>
</div>
