@using AllyisApps.ViewModels.Auth;

@model SkusListViewModel

@{
	ViewBag.Title = Strings.Products;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var prod in Model.ProductsList)
{
<div class="row">
	<div class="col-md-8 col-md-push-2">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 style="margin-top: 0px; margin-bottom: 0px; text-align: center;">
					@prod.ProductName
				</h3>
			</div>

			<div class="panel-body">
				@foreach (var sku in prod.ProductSkus)
				{
					<div class="panel-wrap panel-wrap-one" style="width: 500px;">
						<a href="@Url.Action(ActionConstants.ApplicationRedirect, ControllerConstants.Account, new { id = @sku.SubscriptionId })" style="text-decoration: none">
							<div class="panel panel-default">
								<div class="panel-heading" style="display: table; width: 100%; height: 100%;">
									<div class="left" style="display: table-cell; width: 30%; text-align: center; vertical-align: middle;">
										<img src="~/@string.Format("Content/icons/{0}.png", sku.Name)" alt="@sku.Name" />
									</div>
									<div class="right" style="display: table-cell">
										<h3>
											@sku.Name
										</h3>
										<p>
											@sku.Price
										</p>
									</div>
								</div>
							</div>
						</a>
					</div>
				}
			</div>
		</div>
	</div>
</div>
}
