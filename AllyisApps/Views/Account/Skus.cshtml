@using AllyisApps.ViewModels.Auth;

@model SkusListViewModel

@{
	ViewBag.Title = Strings.Products;
}

@foreach (var prod in Model.ProductsList)
{
	<div class="row">
		<div class="col-md-6 col-md-push-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h2 style="margin-top: 0px; margin-bottom: 0px; text-align: center;">
						@prod.ProductName
					</h2>
				</div>

				<div class="panel-body">
					@foreach (var sku in prod.ProductSkus)
				{
						<div class="row">
							<div class="panel-wrap panel-wrap-one col-md-10 col-md-push-1">
								<div class="panel panel-default">
									<div class="panel-heading" style="display: table; width: 100%; height: 100%;">
										<div class="row">
											<div class="col-md-4"style="text-align: center; vertical-align: middle; margin-top: 25px; margin-bottom: 10px;"><img src="~/Content/icons/TimeTracker.png" alt="@sku.Name" /></div>
											<div class="col-md-8" style="text-align: center; vertical-align: middle">
												<h3>
													@sku.Name
												</h3>
												<p>
													Cost: $@sku.Price.ToString("N2")
													<br />
													@sku.Description
												</p>
											</div>
										</div>
										<div class="row">
											<div class="col-md-12">
												@if (Model.currentSubscriptions.Where(sub => sub.SkuId == sku.SkuId).FirstOrDefault() != null)   //already subscribed to this sku
												{
													<div class="col-md-12" style="text-align: center; vertical-align: middle; margin-top: 10px; margin-bottom: 10px;"><a href="" class="btn btn-default" style="width:inherit" disabled>Subscribed</a></div>
												}
												else if (Model.currentSubscriptions.Where(sub => sub.ProductId == sku.ProductId).FirstOrDefault() != null)  //subscribed to another sku under the same product
												{
													if (Model.currentSubscriptions.Where(sub => sub.ProductId == sku.ProductId).FirstOrDefault().SkuId > sku.SkuId) //pro version always has higher skuId than basic version
													{
														<div class="col-md-12" style="text-align: center; vertical-align: middle; margin-top: 10px; margin-bottom: 10px;"><a href="@Url.Action(ActionConstants.Subscribe, ControllerConstants.Account, new { id = Model.OrganizationId, skuId = @sku.SkuId })" style="text-decoration: none; width:inherit" class="btn btn-danger">Downgrade</a></div>
													}
													else
													{
														<div class="col-md-12" style="text-align: center; vertical-align: middle; margin-top: 10px; margin-bottom: 10px;"><a href="@Url.Action(ActionConstants.Subscribe, ControllerConstants.Account, new { id = Model.OrganizationId, skuId = @sku.SkuId })" style="text-decoration: none; background-color: #428bca; width:inherit" class="btn btn-primary">Upgrade</a></div>
													}
												}
												else
												{
													<div class="col-md-12" style="text-align: center; vertical-align: middle; margin-top: 10px; margin-bottom: 10px;"><a href="@Url.Action(ActionConstants.Subscribe, ControllerConstants.Account, new { id = Model.OrganizationId, skuId = @sku.SkuId })" style="text-decoration: none; width:inherit" class="btn btn-default">@Strings.Subscribe</a></div>
												}
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
				}
				</div>
			</div>
		</div>
	</div>
	<br />
}

<div>
	<a href="@Url.Action(ActionConstants.ManageOrg, ControllerConstants.Account, new { id = Model.OrganizationId })" class="btn btn-default">@Strings.Back</a>
</div>
