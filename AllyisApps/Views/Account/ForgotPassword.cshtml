@model AllyisApps.ViewModels.Auth.ForgotPasswordViewModel
@{
    ViewBag.Title = Strings.ForgotPasswordViewTitle;
    ViewBag.Description = Strings.EnterYourEmail;
}

<style>
	.shrink-wrap-center {
		text-align: center;
	}

	.shrink-wrap-center > div {
		text-align: left;
		display: inline-block;
	}

	.min300 {
		min-width: 300px;
	}

	.btn-gray {
		background-color: #595959;
		border-color: #4d4d4d;
	}

	.btn-gray:hover {
		background-color: #404040;
		border-color: #2e2e2e;
	}

	.allyis-action-buttons {
		text-align: right;
	}

	label.required:after {
		color: #d9534f;
		content: " *";
		font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
		font-weight: bolder;
	}
</style>

<div class="shrink-wrap-center">
    <div class="min300">
        @using (Html.BeginForm(ActionConstants.ForgotPassword, ControllerConstants.Account, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.ReqLabelFor(m => m.Email, Strings.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group allyis-action-buttons">
                <a href="@Url.Action(ActionConstants.Index, ControllerConstants.Account)" class="btn btn-default"> @Strings.Cancel </a>
                <input type="submit" value="@Strings.Send" class="btn btn-primary btn-gray" />
            </div>
        }
    </div>
</div>