@{
	ViewBag.Title = Strings.RemoveBilling;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="shrink-wrap-center">
	<div class="min300">
		<p>
			@Strings.ConfirmRemoveBilling
		</p>

		@using (Html.BeginForm(ActionConstants.RemoveBilling, ControllerConstants.Account, FormMethod.Post))
		{

			<div class="ovrd-form-group form-group allyis-action-buttons">
				<a href="@Url.Action(ActionConstants.ManageOrg, ControllerConstants.Account)" class="ovrd-btn btn ovrd-btn-default btn-default"> @Strings.Cancel </a>
				<input type="submit" class="ovrd-btn btn ovrd-btn-primary btn-primary" value=@Strings.Continue>
			</div>

		}
	</div>
</div>