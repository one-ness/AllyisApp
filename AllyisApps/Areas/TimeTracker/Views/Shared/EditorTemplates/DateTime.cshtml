@model System.DateTime?
@{
string date = DateTime.Today.ToShortDateString();
if (Model != null)
{
    date = string.Format("{0}-{1}-{2}",
                         Model.Value.Year,
                        Model.Value.Month >= 10 ? Model.Value.Month.ToString() : string.Format("0{0}", Model.Value.Month),
                        Model.Value.Day >= 10 ? Model.Value.Day.ToString() : string.Format("0{0}", Model.Value.Day));
}
}
@Html.TextBox(
    string.Empty,
    date,
    new { @class = "form-control", @type = "date" })