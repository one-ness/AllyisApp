@using AllyisApps.ViewModels.TimeTracker.Customer;
@using AllyisApps.ViewModels.TimeTracker.Project;
@using AllyisApps.Services;

@model ManageCustomerViewModel

<div class="flexbox-row flexbox-row-2-col-collapse">
    <div class="col-md-6">
        <div class="panel panel-info" style="position: relative">
            <div class="panel-heading">
                <h1 class="panel-title">@Strings.CustomerList</h1>
            </div>
            <div class="panel-body list-group" id="Customers">
                @foreach (CustomerProjectViewModel customer in Model.InactiveCustomerAndProjects)
                {
                    <a onclick="PopulateInactiveProjects('@customer.CustomerInfo.CustomerId')" class="list-group-item" id="@customer.CustomerInfo.CustomerId">
                        <text>@customer.CustomerInfo.Name</text>
                    </a>
                }
            </div>
        </div>
        <div class="pull-left">
            <a onclick="ReactivateCustomer()" class="glyphicon glyphicon-plus"></a>
        </div>
    </div>
    <div class="col-md-6" height="100%">
        <div class="panel panel-info" style="position: relative">
            <div class="panel-heading">
                <h1 class="panel-title">@Strings.Projects</h1>
            </div>
            <div class="panel-body list-group" id="InactiveProjects">
                <!--projects belong to chosen customer will be populated here-->
            </div>
        </div>
        <div class="pull-left">
            <a onclick="ReactivateProject()" class="glyphicon glyphicon-plus"></a>
        </div>
    </div>
</div>