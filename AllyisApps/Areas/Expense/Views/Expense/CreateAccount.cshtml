@using AllyisApps.ViewModels.ExpenseTracker.Expense;
@model  CreateAccountViewModel
@{
	Layout = "~/Areas/ExpenseTracker/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "CreateAccount";
}

@Scripts.Render("~/bundles/jquery")
@{ Html.EnableClientValidation(); }
@using (Html.BeginForm("saveaccount", ControllerConstants.Expense, FormMethod.Post))
{
	@Html.HiddenFor(m => m.AccountId)
	@Html.HiddenFor(m => m.AccountTypeId)
	@Html.HiddenFor(m => m.IsActive)
	@Html.HiddenFor(m => m.ParentAccountId)

	<div class="col-md-12 col-sm-12 col-lg-12">
		<div class="col-md-2 col-sm-2 col-lg-2">
			<div class="form-group">
				@Html.ReqLabelFor(m => m.AccountName, "Account Name")
				@Html.TextBoxFor(m => m.AccountName, new { @class = "form-control" })
			</div>
			@*<div class="form-group">
					@Html.ReqLabelFor(m => m.AccountTypeName, "Account Type")
					@Html.TextBoxFor(m => m.AccountTypeName, new { @class = "form-control" })
				</div>*@
			<div class="form-group">
				@Html.ReqLabelFor(m => m.ParentAccounts, "Parent Account")
				@Html.DropDownListFor(m => m.SelectedAccount, Model.ParentAccounts, new { @class = "form-control" })
			</div>
			<div class="form-group">
				@Html.ReqLabelFor(m => m.SelectedStatus, "Status")
				@Html.DropDownListFor(m => m.SelectedStatus, Model.AccountStatuses, new { @class = "form-control" })
			</div>
		</div>
	</div>

	<br />
	<div style="margin-left:30px">
		<div>
			<input class="btn btn-primary pull-left" type="submit" name="viewDataButton" value="@ViewBag.ButtonName" title="@ViewBag.ButtonTitle" />
		</div>
		<div class="form-group pull-left">
			<a href="@Url.Action("Accounts")">
				<span class="btn btn-primary">Cancel</span>
			</a>
		</div>
	</div>

}