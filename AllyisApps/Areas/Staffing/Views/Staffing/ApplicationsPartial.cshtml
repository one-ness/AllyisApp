@using AllyisApps.Areas.StaffingManager.ViewModels.Staffing

@model IEnumerable<StaffingApplicationViewModel>

@foreach (StaffingApplicationViewModel application in Model)
{
	string name = application.Applicant.FirstName + " " + application.Applicant.LastName;
	<tr>
		<td>@application.PositionList.Where(p => p.Value == application.PositionId.ToString()).FirstOrDefault().Text</td>
		<td>@application.ApplicationStatus.ToString()</td>
		<td>@application.ApplicationModifiedUtc</td>
		<td>@application.Notes</td>
		<td>
			<a class="btn btn-danger btn-fa hidden-create pull-right"
			   href="@Url.Action("DeleteApplication", new { applicationId = application.ApplicationId })"
			   style="color: white !important; float: right; width: 34px; border-color: #d43f3a !important; border-radius: 0px; margin-right: 0px; display: inline-block">
				<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
			</a>
		</td>
	</tr>
}