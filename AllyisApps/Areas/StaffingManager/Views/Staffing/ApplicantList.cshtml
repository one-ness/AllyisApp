@using AllyisApps.ViewModels.Staffing;
@using AllyisApps.Areas.StaffingManager.ViewModels.Staffing;

@model ApplicantListViewModel

@{
	DisplayHints.BreadcrumbNavPartialLocation = "~/Areas/StaffingManager/Views/Shared/_BreadcrumbNavPartial.cshtml";
	DisplayHints.LayoutThemeBundle = "~/Content/StaffingManager";
	ViewBag.Title = "Applicants";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Applicant List</title>
</head>
<body>
	@Html.ActionLink("Create Applicant", "CreateApplicant", new { }, new { @class = "btn btn-primary pull-right", style = "color: white !important; margin-bottom: 20px;" })
	<table class="table table-hover" style="clear: both;">
		<thead>
			<tr>
				<th style="width: 25%;">Name</th>
				<th style="width: 25%;">Email</th>
				<th style="width: 25%;">Address</th>
				<th style="width: 25%;">Notes</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (StaffingApplicantViewModel applicant in Model.Applicants)
			{
				string name = applicant.FirstName + " " + applicant.LastName;
				<tr>
					<td>@Html.ActionLink(name, "Applicant", new { applicant.ApplicantId })</td>
					<td>@applicant.Email</td>
					<td>@applicant.Address</td>
					<td>@applicant.Notes</td>
					<td>
						@Html.ActionLink("X", "DeleteApplicant", new { applicantId = applicant.ApplicantId }, new { @class = "btn btn-danger btn-fa hidden-create", style = "float: right; width: 34px; color: white !important; border-color: #d43f3a !important; border-radius: 0px; margin-right: 0px;" })
						@*<a class="btn btn-danger btn-fa hidden-create"
						   onclick="removeApplicant(@applicant.ApplicantId)"
						   style="float: right; width: 34px; color: white !important; border-color: #d43f3a !important; border-radius: 0px; margin-right: 0px;"
						   area-label="Close">
							<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
						</a>*@
					</td>
				</tr>
			}
		</tbody>
	</table>
</body>
</html>
